source 'https://rubygems.org'

# core

gem 'rails', '~> 5.1.1'
gem 'pg'
gem 'puma'

# views

gem 'sass-rails'
gem 'uglifier'
gem 'coffee-rails'
gem 'haml'
gem 'bootstrap'

# core libs

gem 'jquery-rails'
gem 'jbuilder'
gem 'exception_notification'
gem 'webpacker'

# additional libs

gem 'execjs'
gem 'nokogiri'
gem 'chartkick'
gem 'groupdate', require: 'groupdate'

gem 'turbolinks'

source 'https://rails-assets.org' do
  gem 'rails-assets-tether', '>= 1.3.3'
end

group :development, :test do
  gem 'pry', require: false
  gem 'rspec-rails'
end

group :development do
  gem 'web-console'
  gem 'listen'
end
