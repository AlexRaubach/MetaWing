- content_for :title do
  = t('.title')

%table.table.table-striped.table-bordered
  %tr
    %th= t('.position')
    %th= t('.image')
    %th= t('.pilot_name')
    %th= t('.faction')
    %th= t('.weight')
    %th= t('.ship_name')
  - @view.pilots.each.with_index do |pilot, index|
    %tr{data: {pilot_id: pilot.id, ship_id: pilot.ship_id}}
      %td
        %strong= "#{index + 1}."
      %td
        = link_to pilot.image_source_uri do
          - if pilot.image_uri.present?
            = image_tag pilot.image_uri, width: '80px'
          - else
            = t('.no_image')
      %td
        = pilot.name
      %td
        = pilot.faction
      %td
        = pilot.weight
        %br
        = pilot.squadrons
        %br
        = pilot.tournaments
      %td
        = pilot.ship_name
