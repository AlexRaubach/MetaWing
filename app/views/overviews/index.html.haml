- content_for :title do
  = t('.title')

- if Tournament.all.count > 0
  %h2= t('.current_status')
  %ul
    %li= "#{t('.latest_import')}: #{time_ago_in_words(Tournament.all.map(&:created_at).max)} #{t('.ago')}"
    %li= "#{t('.number_of_tournaments')}: #{Tournament.count}"
    %li= "#{t('.number_of_squadrons')}: #{Squadron.count}"
    %li= "#{t('.number_of_games')}: #{Game.count}"

%h2= t('.intro_title')
= t('.intro_text', release: Date.new(2012, 9, 14).iso8601,
                   weeks_ago: 2.week.ago.to_date.iso8601,
                   guri: Pilot.find_by(name: 'Guri').try(:id),
                   regional_type: TournamentType.find_by(name: 'Regional').try(:id)).html_safe
